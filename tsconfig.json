{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "features/*": ["features/*"],
      "types/*": ["types/*"],
      "components/*": ["components/*"],
      "app/*": ["app/*"],
      "containers/*": ["containers/*"],
      "theme/*": ["theme/*"]
    }
  },
  "include": ["src", "env.js",  "vite-env.d.ts"]
}
